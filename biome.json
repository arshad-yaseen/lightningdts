{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noUselessElse": "off"
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"options": {
						"ignoreRestSiblings": true
					}
				}
			}
		},
		"includes": [
			"**",
			"!wasi-worker.mjs",
			"!wasi-worker-browser.mjs",
			"!index.js",
			"!index.d.ts",
			"!lightningdts.wasi.cjs",
			"!lightningdts.wasi-browser.js"
		]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"includes": [
			"**",
			"!wasi-worker.mjs",
			"!wasi-worker-browser.mjs",
			"!index.js",
			"!index.d.ts",
			"!lightningdts.wasi.cjs",
			"!lightningdts.wasi-browser.js"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	}
}
